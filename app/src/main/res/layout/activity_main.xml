<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvDefaultLoader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/string_default_loader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.envamapa.custom.ui.loader.Loader
        android:id="@+id/defaultLoader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDefaultLoader" />

    <TextView
        android:id="@+id/tvHomeLoader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/string_home_loader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/defaultLoader" />

    <com.envamapa.custom.ui.loader.Loader
        android:id="@+id/homeLoader"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHomeLoader"
        app:loader_type="home" />

    <TextView
        android:id="@+id/tvSearchLoader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/string_search_loader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeLoader" />

    <com.envamapa.custom.ui.loader.Loader
        android:id="@+id/searchLoader"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSearchLoader"
        app:loader_type="search" />

</androidx.constraintlayout.widget.ConstraintLayout>